@model Student;
@{
    ViewData["Title"] = "StudentEdit";
}

<h1 class="text-center">แก้ไขข้อมูล</h1>
<div>
    <form method="post" asp-controller="Student" asp-action="StudentEdit">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control my-2" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Score"></label>
            <input type="number" asp-for="Score" class="form-control my-2" placeholder="0-100" />
            <span asp-validation-for="Score" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary my-2">อัพเดทข้อมูล</button>
    </form>
</div>


